<Window x:Class="UJYA04_HFT_20222023.WpfClient.NonCrudWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UJYA04_HFT_20222023.WpfClient"
        mc:Ignorable="d"
        Title="NonCrudWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:NonCrudViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0">
            
        </ListBox>
        <StackPanel Grid.Column="1">
            <Label Background="LightBlue" Content="Team Manager Name" HorizontalContentAlignment="Center" Padding="10"/>
            <TextBox x:Name="tb_managername"   Padding="10" Margin="0, 0, 0, 10"/>
            <Button Content="Execute Command" Padding="10"/>
            <Label Background="LightBlue" Content="Get Manager from shirt number" HorizontalContentAlignment="Center" Padding="10"/>
            <TextBox x:Name="tb_shirtnum" Padding="10" Margin="0, 0, 0, 10"/>
            
        </StackPanel>
    </Grid>
</Window>
